<div class="container mt-5 d-flex justify-content-center">
<div class="card shadow-lg border-0 rounded-4" style="width: 50rem;">
    <div class="card-header bg-gradient text-white text-center py-4" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);">
        <h2 class="mb-0 fw-bold">🧾 Chi Tiết Hóa Đơn</h2>
    </div>
    <div class="card-body p-4">
        <table class="table table-bordered text-center align-middle">
            <thead class="bg-dark text-white">
                <tr>
                    <th>Mã CTHD</th>
                    <th>Mã HĐ</th>
                    <th>Ngày Đặt</th>
                    <th>Loại Sân</th>
                    <th>Số Sân</th>
                    <th>Số Giờ Đặt</th>
                    <th>Giá Tiền (VNĐ)</th>
                </tr>
            </thead>
            <tbody class="bg-light">
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.MaCTHD</td>
                        <td>@item.MaHoaDon</td>
                        <td>
                            @{
                                DateTime dt = DateTime.ParseExact(item.NgayDat.ToString(), "dd/MM/yyyy hh:mm:ss", CultureInfo.InvariantCulture);
                                string s = dt.ToString("dd/MM/yyyy", CultureInfo.InvariantCulture);
                            }
                            @s
                        </td>
                        <td>@item.LoaiSan</td>
                        <td>@item.SoSan</td>
                        <td>@item.SoGioDat</td>
                        <td class="fw-bold text-success">@String.Format("{0:N0} VNĐ", item.GiaTien)</td>
                    </tr>
                }
            </tbody>
        </table>
        <div class="text-end mt-4">
            <button class="btn btn-primary btn-lg shadow-sm">
                <i class="fas fa-print"></i> In Hóa Đơn
            </button>
        </div>
    </div>
</div>
</div>

<style>
    .table-bordered th, .table-bordered td {
        padding: 12px;
    }

    .card {
        box-shadow: 0px 4px 15px rgba(0, 0, 0, 0.1);
    }

    .bg-gradient {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }
</style>

